<csv_screen>:
    name: 'csv_screen'
    canvas.before:
        Color:
            rgb: (175/255, 203/255, 255/255)
        Rectangle:
            size: self.size

    BoxLayout:
        padding: 30
        spacing: 20
        orientation: 'vertical'
        Label:
            text: 'This function allows you to export your timetable data in a format\n that is compatible with spreadsheet software such as Microsoft\n Excel or Google Sheets. By clicking the export button and saving\n the generated CSV file, users can open the file in their preferred\n spreadsheet software and manipulate the data as needed. Exporting\n the timetable in excel will also allow you to print the timetable'
            color: (0,0,0,1)
            #background_color: (1,0,0,1)
            font_name: "Fonts/Somatic-Rounded.ttf"
            font_size: self.width/35
            #text_size: 700, None
            halign: 'center'
            valign: 'middle'
            pos_hint: {'top': 0.9}
        RoundedButtonCSV:
            text: 'Export Timetable'
            size_hint:(0.2,0.1)
            pos_hint:{'center_x': 0.5, 'center_y': 0.9}
            font_size: 20
            background_normal: ''
            color: (0,0,0,1)
            font_name: "Fonts/Somatic-Rounded.ttf"
            on_press: root.go_next()




