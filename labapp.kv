<HomeScreen>:
    name: 'Home'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgb: (35/255, 169/255, 127/255)
            Rectangle:
                size: self.size


        Image:
            source: 'Images/tabley.png'
            pos_hint: {'right': 1.21}
            size_hint: (1.4,0.7)

        Label:
            text: 'Tabley is an innovative and user-friendly app that simplifies\n the process of creating timetables. It provides an intuitive\n interface where users can easily input their schedule and\n customize it according to their needs. The app also features\n automatic scheduling, which suggests the best times and\n durations for tasks'
            color: (1,1,1,1)
            background_color: (1,0,0,1)
            font_name: "Fonts/Somatic-Rounded.ttf"
            font_size: self.width/30
            #text_size: 700, None
            halign: 'center'
            valign: 'middle'
            pos_hint: {'top': 0.9}

        Label:
            size_hint: 0.1, 0.3

        RoundedButton:
            text: 'Get Started'
            size_hint: (0.2, 0.2)
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            color: (0, 0, 0, 1)
            font_name: "Fonts/Somatic-Rounded.ttf"
            font_size: 20
            on_press:
                app.root.current = 'SecondScreen'
                root.manager.transition.direction = 'left'

        Label:
            size_hint: 0.1, 0.15

<SecondScreen>:
    name: 'SecondScreen'

    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Color:
                rgb: (198/255, 235/255, 190/255)
            Rectangle:
                size: self.size

        BoxLayout:

            Label:
                size_hint: (0.4, 0.1)

            GridLayout:
                padding: 30
                spacing: 30
                cols: 3
                rows: 3
                Button:
                    background_normal: 'Images/i1.jpg'
                    on_press:
                        app.root.current='LayoutScreen'
                        root.manager.transition.direction='left'
                Label:
                    size_hint: (0.6, 0.1)

                Button:
                    background_normal: 'Images/display.jpg'
                    on_press: root.display_button_pressed()

                Button:
                    background_normal: 'Images/update.jpg'
                    on_press: root.update_button_pressed()

                Label:
                    size_hint: (0.6, 0.2)

                Button:
                    background_normal: 'Images/delete.jpg'
                    on_press: root.delete_button_pressed()

                Button:
                    background_normal: 'Images/csv.png'
                    on_press: root.csv_button_pressed()
                Label:
                    size_hint: (0.6, 0.2)

                Button:
                    background_normal: 'Images/reminder.png'
                    on_press: root.reminder_button_pressed()
            Label:
                size_hint: (0.4, 0.1)

        RoundedButtonHome:
            text: 'Go Back to Home'
            size_hint: (.2,.1)
            font_size: 20
            color: (0,0,0,1)
            font_name: "Fonts/Somatic-Rounded.ttf"
            background_normal: ''
            pos_hint: {'center_x': 0.5}
            on_press:
                app.root.current='Home'
                root.manager.transition.direction='right'
        Label:
            size_hint: 0.1, 0.07

<LayoutScreen>:
    name: 'LayoutScreen'

    BoxLayout:
        padding: 30
        canvas.before:
            Color:
                rgb: (153/255, 225/255, 217/255)
            Rectangle:

                size: self.size

        orientation: 'vertical'

        Label:
            text: 'Select a suitable layout for your timetable'
            font_size: self.width/18
            color: (0,0,0,1)
            size_hint: (.5,.1)
            pos_hint: {'center_x': 0.5}
            font_name: "Fonts/Somatic-Rounded.ttf"

        GridLayout:
            cols:2
            spacing: 30
            padding: 30

            MDCard:
                md_bg_color: (207/255, 159/255, 255/255)
                orientation: 'vertical'
                elevation: 4
                Image:
                    source: 'Images/t1.jpg'
                    allow_stretch: True
                    keep_ratio: False
                Label:
                    text: 'This Layout Displays the Days from left to\n right and Time Periods top to bottom '
                    halign: 'center'
                    valign: 'middle'
                    size_hint: (.5,.5)
                    pos_hint: {'center_x': .5}
                    font_name: "Fonts/Somatic-Rounded.ttf"
                    font_size: self.width/10
                    color: (0,0,0,1)
            #MDIconButton:
                #size_hint: (1,1)
                #md_bg_color: 1,0,0,1
                #elevation: 2

            MDCard:
                md_bg_color: (207/255, 159/255, 255/255)
                orientation: 'vertical'
                elevation: 4
                Image:
                    source: 'Images/t2.jpg'
                    allow_stretch: True
                    keep_ratio: False
                Label:
                    text: 'This Layout Displays the Days from top to \nbottom and Time Periods left to right '
                    halign: 'center'
                    valign: 'middle'
                    size_hint: (.5,.5)
                    pos_hint: {'center_x': .5}
                    font_size: self.width/10
                    color: (0,0,0,1)
                    font_name: "Fonts/Somatic-Rounded.ttf"

            Button:
                text: 'Click to Select the Above Layout'
                size_hint: .1 , .2
                font_name: "Fonts/Somatic-Rounded.ttf"
                background_normal: ''
                background_color: 8/255, 143/255, 143/255
                font_size: self.width/20
                on_press:
                    app.root.current='QuestionsScreen'
                    root.manager.transition.direction='left'


            Button:
                text: 'Click to Select the Above Layout'
                size_hint: .2 , .2
                font_name: "Fonts/Somatic-Rounded.ttf"
                background_normal: ''
                background_color: 8/255, 143/255, 143/255
                font_size: self.width/20
                on_press:
                    app.root.current='second_timetable_layout'
                    root.manager.transition.direction='left'

        RoundedButtonLayout:
            color: (0,0,0,1)
            text: 'Go Back'
            size_hint_y: .1
            size_hint_x: .3
            pos_hint: {'center_x':.5}
            font_name: "Fonts/Somatic-Rounded.ttf"
            background_normal: ''
            font_size: self.width/20
            on_press:
                app.root.current = 'SecondScreen'
                root.manager.transition.direction = 'right'




